<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/colorPrimaryDark</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="Text.Info">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#BAB7B7</item>
    </style>

    <style name="TextAppearance.App.TextView.Toolbar" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <dimen name="text_20">20dp</dimen>
    <color name="white">#FFF</color>
</resources>